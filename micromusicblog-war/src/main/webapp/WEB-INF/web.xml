<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    
    <!-- Servlet for restful api -->
   <servlet>
	   <servlet-name>api</servlet-name>
	   <servlet-class>
	       org.springframework.web.servlet.DispatcherServlet
	   </servlet-class>
	   <load-on-startup>1</load-on-startup>
	</servlet>

   <!-- Listener for initilization -->
   <listener>
       <listener-class>com.ece1779.group4.mmb.listener.StartUpListener</listener-class>
   </listener>
   
   <!-- Servlet for web content -->
   <servlet>
      <servlet-name>webcontent</servlet-name>
      <servlet-class>
         org.springframework.web.servlet.DispatcherServlet
      </servlet-class>
      <load-on-startup>2</load-on-startup>
   </servlet>
   
   <!-- Servlet mapping for restful api -->
	<servlet-mapping>
	   <servlet-name>api</servlet-name>
	   <url-pattern>/api/*</url-pattern>
	</servlet-mapping>
	
   <!-- Servlet mapping for mvc -->
   <servlet-mapping>
      <servlet-name>webcontent</servlet-name>
      <url-pattern>/</url-pattern>
   </servlet-mapping>
   
   <!-- Filter setting for objectify -->
   <filter>
        <filter-name>ObjectifyFilter</filter-name>
        <filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
	</filter>
	<filter-mapping>
        <filter-name>ObjectifyFilter</filter-name>
        <url-pattern>/*</url-pattern>
	</filter-mapping>
	
</web-app>
